<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/_1sdp" android:color="@color/black"/>
            <gradient android:startColor="#14000000" android:endColor="#14000000" android:angle="270" android:centerColor="#be000000"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/_1sdp" android:color="@color/black"/>
            <gradient android:startColor="#14000000" android:endColor="#14000000" android:angle="270" android:centerColor="#be000000"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#14000000" android:endColor="#000000" android:angle="270" android:centerColor="#b7000000"/>
        </shape>
    </item>
</selector>
